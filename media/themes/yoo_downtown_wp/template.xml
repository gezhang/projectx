<?xml version="1.0" encoding="utf-8"?>
<install type="template">
	<name>Downtown</name>
	<version>1.0.5</version>
	<creationDate>January 2012</creationDate>
	<author>YOOtheme</author>
	<authorEmail>info@yootheme.com</authorEmail>
	<authorUrl>http://www.yootheme.com</authorUrl>
    <copyright>Copyright (C) YOOtheme GmbH</copyright>
    <license>YOOtheme Proprietary Use License (http://www.yootheme.com/license)</license>
	<description>Downtown is the July 2011 theme of the YOOtheme club. It is based on YOOtheme's Warp theme framework. NOTE: It is not free or public. This theme is for members of the YOOtheme club only.</description>
	<positions>
		<position settings="display">absolute</position>
		<position settings="display">search</position>
		<position settings="display">logo</position>
		<position settings="display">menu</position>
		<position settings="display">banner</position>
		<position settings="display">toolbar-l</position>
		<position settings="display">toolbar-r</position>
		<position settings="display">headerbar</position>
		<position settings="display">breadcrumbs</position>
		<position>top-a</position>
		<position>top-b</position>
		<position>bottom-a</position>
		<position>bottom-b</position>
		<position>innertop</position>
		<position>innerbottom</position>
		<position>sidebar-a</position>
		<position>sidebar-b</position>
		<position settings="display">footer</position>
		<position>mobile-logo</position>
		<position>mobile-menu</position>
		<position>mobile-top</position>
		<position>mobile-bottom</position>
		<position>mobile-footer</position>
	</positions>
	<modulesettings>
		<setting name="title" type="list" label="Title" default="1">
			<option value="1">Show</option>
			<option value="0">Hide</option>
		</setting>
		<setting name="style" type="style" label="Style" nav_menu="false">
			<option name="Default" value="" />
			<option name="Box" value="style=box;color=0;header=0" />
			<option name="Box / Header Black" value="style=box;color=0;header=black" />
			<option name="Box / Header Color1" value="style=box;color=0;header=color1" />
			<option name="Box / Header Color2" value="style=box;color=0;header=color2" />
			<option name="Box White" value="style=box;color=white;header=0" />
			<option name="Box White / Header Black" value="style=box;color=white;header=black" />
			<option name="Box White / Header Color1" value="style=box;color=white;header=color1" />
			<option name="Box White / Header Color2" value="style=box;color=white;header=color2" />
			<option name="Box Color1" value="style=box;color=color1;header=0" />
			<option name="Box Color1 / Header Black" value="style=box;color=color1;header=black" />
			<option name="Box Color1 / Header Color2" value="style=box;color=color1;header=color2" />
			<option name="Box Color2" value="style=box;color=color2;header=0" />
			<option name="Box Color2 / Header Black" value="style=box;color=color2;header=black" />
			<option name="Box Color2 / Header Color1" value="style=box;color=color2;header=color1" />
			<option name="Line" value="line" />
			<option name="Blank" value="blank" />
		</setting>
		<setting name="icon" type="list" label="Icon">
			<option value="">None</option>
			<option value="download">Download</option>
			<option value="twitter">Twitter</option>
			<option value="mail">Mail</option>
			<option value="bubble">Bubble</option>
			<option value="login">Login</option>
			<option value="cart">Cart</option>
		</setting>
		<setting name="badge" type="list" label="Badge">
			<option value="">None</option>
			<option value="hot">Hot</option>
			<option value="new">New</option>
			<option value="top">Top</option>
			<option value="free">Free</option>
		</setting>
		<setting name="display" type="display" label="Display" />
	</modulesettings>
</install>